.default-content {
    display: flex;
    flex-direction: column;
}

.logo {
    padding: 30px 0;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

.logo image {
    width: 80px;
    height: 80px;
    border-radius: 50%;
}

.logo .version {
    margin-top: 10px;
}

.logo .version text {
    font-size: 16px;
}

.intro, .copyright {
    padding: 0 40px;
    display: flex;
    flex-direction: column;
}

.intro text {
    padding: 5px 0;
    word-break: initial;
}

.copyright {
    color: #999;
    align-items: center;
    font-size: 12px;
	margin-top: 100px;
    padding: 30px 0;
}
