page {
    background-color: #f5f5f5;
}

/* 购物车列表 */

.cart-list {
    background-color: #fff;
    padding: 0 10px;
}

.cart-item {
    display: flex;
    position: relative;
    padding: 5px;
}

.cart-item::before {
    content: "";
    position: absolute;
    top: -0.5px;
    left: 0;
    width: 200%;
    height: 200%;
    border-bottom: 1px solid #ddd;
    transform-origin: 0 0;
    transform: scale(0.5, 0.5);
    box-sizing: border-box;
    z-index: 1;
}

.cart-item:last-child::before {
    display: none;
}

.cart-item .product-image image {
    width: 100rpx;
    height: 100rpx;
    flex-basis: 100rpx;
}

.cart-item .cart-detail-wrapper {
    display: flex;
    flex-grow: 1;
    padding: 0 20rpx;
}

.cart-item .cart-detail, .cart-item .cart-quantity {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.cart-item .cart-detail {
    width: 350rpx;
}

.cart-item .cart-detail .product-title, .cart-item .cart-detail .choose-wrapper {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.cart-item .cart-detail .product-title {
    color: #112e40;
    word-break: break-all;
    font-size: 26rpx;
}

.cart-item .cart-detail .choose-wrapper {
    font-size: 12px;
}

.cart-item .cart-detail .choose-wrapper .choose-tip {
    display: none;
}

.cart-item .cart-item-price {
    display: flex;
    align-items: center;
    padding-right: 10rpx;
}

/* 配送方式和优惠券 */

button.disabled {
    opacity: 0.6;
}

.shipping-and-coupon .button-main, .order-comment .button-main {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-right: 10px;
}

.select-shipping .no-method, .select-coupon .not-use {
    color: #707070;
}

.select-shipping {
    position: relative;
}

.select-shipping::before {
    content: "";
    position: absolute;
    top: -0.5px;
    left: 0;
    width: 200%;
    height: 200%;
    border-bottom: 1px solid #eee;
    transform-origin: 0 0;
    transform: scale(0.5, 0.5);
    box-sizing: border-box;
    z-index: 1;
}

.shipping-method {
    display: flex;
}

.shipping-method .shipping-method-title, .shipping-method .shipping-method-cost {
    display: flex;
    align-items: center;
}

.shipping-method .shipping-method-title {
    margin-right: 5px;
}

.shipping-method .shipping-method-cost {
    color: #112e40;
}

.select-coupon .not-use {
    color: #707070;
}

.select-coupon .coupon-count {
    color: #112e40;
    padding: 0 5px;
}

/* 配送方式弹窗 */

.zan-popup.shipping-popup .popup-title {
    padding-left: 14px;
    padding-right: 14px;
}

.shipping-method-btn {
    position: relative;
    text-align: left;
    height: 45px;
    line-height: 1;
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: #fff;
    border: 0;
    border-radius: 0;
}

.shipping-method-btn::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 200%;
    height: 200%;
    border-top: 1px solid #ddd;
    transform-origin: 0 0;
    transform: scale(0.5, 0.5);
    box-sizing: border-box;
    z-index: 1;
}

.shipping-method-btn .shipping-method {
    display: flex;
    flex-grow: 1;
}

.shipping-method-btn .shipping-method .shipping-method-title {
    width: 70px;
    display: flex;
    align-items: center;
}

.shipping-method-btn .selected-image image {
    opacity: 0;
    width: 15px;
    height: 15px;
}

.shipping-method-btn.selected .selected-image image {
    opacity: 1;
}

/* 支付方式 */

.payment-methods {
    background-color: #fff;
    margin: 10px 0;
}

.payment-methods .payment:not(:last-child)::before {
    content: "";
    position: absolute;
    top: -0.5px;
    left: 0;
    width: 200%;
    height: 200%;
    border-bottom: 1px solid #eee;
    transform-origin: 0 0;
    transform: scale(0.5, 0.5);
    box-sizing: border-box;
    z-index: 1;
}

.payment {
    position: relative;
    height: 50px;
    display: flex;
    justify-content: space-between;
    padding: 10px 12px;
}

.payment .not-selected {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    border: 1px solid #eee;
}

.payment .icon {
    width: 25px;
    height: 25px;
    margin-right: 8px;
}

.payment .payment-main, .payment .checkbox {
    display: flex;
    align-items: center;
}

/* 买家留言 */

.order-comment {
    margin: 10px 0;
    padding: 0 14px;
}

.order-comment input {
    flex-grow: 1;
    padding-left: 20px;
    color: #444;
}

/* 价格详情 */

.price-detail {
    background-color: #fff;
    padding: 10px 14px;
    margin-bottom: 60px;
}

.price-detail .detail-row {
    display: flex;
    font-size: 26rpx;
}

.price-detail .detail-row .detail-name {
    width: 50px;
}

.price-detail .detail-row .detail-value {
    display: flex;
    justify-content: space-between;
    color: #112e40;
    font-size: 12px;
}

.price-detail .detail-row.subtotal .detail-value .minus,
.price-detail .detail-row.shipping .detail-value .minus {
    color: transparent;
}

/* 底栏 */

.submit-order {
    display: flex;
    width: 100%;
    height: 50px;
    background-color: #fff;
    font-size: 12px;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 10;
}

.submit-order .total {
    display: flex;
    flex-grow: 1;
    padding-left: 10px;
    position: relative;
}

.submit-order .total::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 200%;
    height: 200%;
    border-top: 1px solid #ddd;
    transform-origin: 0 0;
    transform: scale(0.5, 0.5);
    box-sizing: border-box;
    z-index: 1;
}

.submit-order .total .cart-total, .submit-order .total .shipping-total,
.submit-order .total .discount-total {
    display: flex;
    align-items: center;
}

.submit-order .total .cart-total {
    margin-right: 10px;
}

.submit-order .total .cart-total .price,
.submit-order .total .shipping-total .price {
    font-size: 18px;
}

.submit-order .total .cart-total .price {
    color: #112e40;
}

.submit-order .total .discount-total {
    font-size: 12px;
    color: #707070;
}

.submit-order .submit-order-btn {
    display: flex;
    align-items: center;
    height: auto;
    padding: 0 20px;
}
