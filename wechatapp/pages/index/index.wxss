page {
    background: #ececec;
}

.container {
    width: 100%;
    background: linear-gradient(#ffffff 0%, #ffffff 30%, #ececec 30%);
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
}

.flex-col {
    display: flex;
    flex-direction: column;
}

.flex-center {
    justify-content: center;
    align-items: center;
}

.flex {
    flex: 1;
}


.li {
    width: 100%;
    height: 410rpx;
}
.li1 {
    width: 320rpx;
    margin: 0 auto;
    border-radius: 10rpx;
    height: 410rpx;
    overflow: hidden;
}
.li1:not(.selected) {
    transform: scale(0.9);
}
